<h2>Edit <%= @document.label.titleize %></h2>
<%= error_messages_for :document %>
<% form_for @document.becomes(Document), :url => admin_document_path(@document.id), :html => { :multipart => true } do |f| %>
  <%= render :partial => form_partial, :locals => { :f => f } %>
	<table cellpadding="0" cellspacing="0" border="0">
  <tr><td>.</td><td width="72"><%= f.submit 'Save Page' %></td><td width="72"> <%= link_to 'Cancel', admin_cancel_document_path(@document), :class => 'button' %></td></tr>
	</table>
<% end %>

  <% if session[:system] %>
  <%= form_partial %>
  <% end %>
